page {
  background: #f8f9fa;
  min-height: 100vh;
}

.certification-container {
  min-height: 100vh;
  background: #f8f9fa;
}



/* 认证类型切换 */
.cert-tabs {
  display: flex;
  background: #ffffff;
  margin: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #666666;
  position: relative;
  background: #f8f9fa;
}

.tab-item.active {
  background-color: #4A90E2;
  color: #ffffff;
  font-weight: 500;
}

.tab-item.active::after {
  display: none;
}

/* 认证步骤 */
.cert-steps {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0;
  padding: 30rpx 0;
  background: #e8f5e8;
}

.step-item {
  display: flex;
  align-items: center;
  position: relative;
  padding: 0 20rpx;
}

.step-content-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.step-line {
  width: 60rpx;
  height: 2rpx;
  background-color: #e0e0e0;
  margin: 0 10rpx;
}

.step-item.active + .step-line {
  background-color: #4A90E2;
}

.step-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  position: relative;
  z-index: 2;
  margin-right: 12rpx;
  border-radius: 50%;
  background: #e0e0e0;
  color: #999;
}

.step-item.active .step-icon {
  background: #4A90E2;
  color: #ffffff;
}

.step-text {
  font-size: 24rpx;
  color: #999999;
}

.step-item.active .step-text {
  color: #4A90E2;
  font-weight: 500;
}

/* 基础信息表单样式 */
.form-section {
  background: #ffffff;
  border-radius: 12rpx;
  margin: 30rpx;
  padding: 0rpx;
}

/* 姓名和性别在同一行 */
.name-gender-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.name-item {
  flex: 3;
  margin-right: 20rpx;
}

.gender-item {
  flex: 2;
}

/* 性别选择器 */
.gender-selector {
  display: flex;
  width: 100%;
}

.gender-option {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  margin-right: 20rpx;
  color: #333;
  font-size: 32rpx;
}

.gender-option:last-child {
  margin-right: 0;
}

.gender-option.selected {
  background-color: #4A90E2;
  color: #fff;
  border-color: #4A90E2;
}

/* 选择器样式 */
.picker-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  font-size: 32rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f9f9f9;
}

.picker-input.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

/* 搜索输入框 */
.search-input {
  padding-right: 50rpx;
  position: relative;
}

.form-item {
  margin-bottom: 20rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #f9f9f9;
}

.form-item .picker-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
}

/* 未找到企业提示 */
.company-not-found {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
  font-size: 26rpx;
  text-align: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

/* 下一步按钮 */
.next-btn {
  width: 90%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #4A90E2;
  color: #ffffff;
  text-align: center;
  border-radius: 45rpx;
  margin: 40rpx auto;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.3);
}

.section-title {
  font-size: 24rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
  display: inline-block;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 10rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
}

/* VIP嘉宾选项 */
.vip-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.vip-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #333333;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: #ffffff;
}

.vip-checkbox.checked {
  background: #333333;
  border-color: #333333;
}

.checkbox-icon {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.vip-label {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  margin-right: 20rpx;
}

.vip-code-input {
  flex: 1;
  height: 60rpx;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 证书上传区域 */
.cert-upload-section {
  margin-bottom: 20rpx;
}

.upload-section-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.upload-tip {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 20rpx;
  display: block;
}

.cert-upload-grid {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.cert-upload-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cert-upload-area {
  width: 50%; /* 资料上传页面保持原来大小 */
  min-height: 20rpx;
  padding-bottom: 35%; /* 资料上传页面保持原来大小 */
  background: #f8f9fa;
  border: 2rpx dashed #4A90E2;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  position: relative;
  /* 靠左对齐，移除居中 */
}

/* 法人认证页面专用的上传区域样式 */
.legal-person-upload-area {
  width: 90%; /* 法人认证页面增大宽度，更美观大气 */
  min-height: 20rpx;
  padding-bottom: 50%; /* 法人认证页面增大图片区域，适合身份证比例 */
  background: #f8f9fa;
  border: 2rpx dashed #4A90E2;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  position: relative;
}

/* 个人身份认证页面专用的上传区域样式 */
.personal-id-upload-area {
  width: 90%; /* 个人身份认证页面增大宽度，更美观大气 */
  min-height: 20rpx;
  padding-bottom: 50%; /* 个人身份认证页面增大图片区域，适合身份证比例 */
  background: #f8f9fa;
  border: 2rpx dashed #4A90E2;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  position: relative;
}

/* 个人证书上传区域样式 */
.personal-cert-upload-area {
  width: 90%; /* 个人证书上传页面增大宽度，更美观大气 */
  min-height: 20rpx;
  padding-bottom: 50%; /* 个人证书上传页面增大图片区域，适合证书比例 */
  background: #f8f9fa;
  border: 2rpx dashed #4A90E2;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.cert-uploaded-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  object-fit: cover; /* 保持原始比例，可能会裁剪 */
}

.cert-upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.cert-placeholder-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.6;
}

.cert-placeholder-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.cert-upload-label {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}  


/* 步骤内容 */
.step-content {
  background: #ffffff;
  margin: 0;
  padding: 20rpx 30rpx 120rpx 30rpx;
  border-radius: 0;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
  display: block;
  padding-left: 10rpx;
}

/* 主上传区域 */
.main-upload-area {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background: #f5f5f5;
  overflow: hidden;
  border: none;
  position: relative;
}

.main-uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  position: absolute;
  top: 0;
  left: 0;
}

.main-upload-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.delete-main-photo {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  z-index: 10;
}

.placeholder-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  object-fit: cover;
  opacity: 0.3;
}

/* 缩略图网格 */
.thumbnail-grid {
  display: flex;
  margin: 20rpx 0;
}

.thumbnail-item {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 0;
  overflow: hidden;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.thumbnail-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.add-thumbnail {
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.add-icon {
  font-size: 40rpx;
  color: #999999;
}

.delete-icon {
  position: absolute;
  top: 0;
  right: 0;
  width: 30rpx;
  height: 30rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  transform: translate(30%, -30%);
}

.upload-tip {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 40rpx;
  text-align: left;
}

/* 按钮 */
.next-btn {
  height: 88rpx;
  background: #4A90E2;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 400;
  color: #ffffff;
  margin-top: 40rpx;
  text-align: center;
  box-shadow: none;
  border: none;
}

.next-btn:active {
  background: #3A7BC8;
}

/* 企业认证 */
.enterprise-cert {
  background: #f8f9fa;
}

.coming-soon {
  padding: 200rpx 0;
  text-align: center;
  font-size: 32rpx;
  color: #999999;
}

/* 企业上传区域样式 */
.enterprise-upload-area {
  width: 100%;
  height: 0;
  padding-bottom: 42.86%; /* 21:9的比例 */
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  border: 2rpx dashed #4A90E2;
  background: #f8f9fa;
}

/* 企业上传后显示的图片 */
.enterprise-uploaded-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
  padding-bottom: 56.25%; /* 上传后显示16:9比例 */
}



.enterprise-upload-placeholder {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.enterprise-bg-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #4A90E2;
  margin-bottom: 20rpx;
  z-index: 2;
}

.placeholder-text {
  font-size: 28rpx;
  color: #ffffff;
  z-index: 2;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

/* 上传按钮样式 */
.upload-btn {
  width: 300rpx; /* 增加宽度避免文字换行 */
  height: 60rpx;
  line-height: 60rpx;
  background: #4A90E2; /* 蓝色背景 */
  border: 1rpx solid #4A90E2;
  border-radius: 8rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ffffff; /* 白色文字 */
  margin-bottom: 30rpx;
}

/* 协议相关样式 */
.agreement-section {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.agreement-checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  background: #fff;
}

.agreement-checkbox.checked {
  background-color: #4A90E2;
  border-color: #4A90E2;
}

.agreement-checkbox .checkbox-icon {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
}

.agreement-text {
  font-size: 28rpx;
  color: #333;
}

.agreement-link {
  font-size: 28rpx;
  color: #4A90E2;
  text-decoration: underline;
}