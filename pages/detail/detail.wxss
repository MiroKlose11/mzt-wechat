/* detail.wxss */
.detail-container {
  padding: 30rpx;
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.detail-header {
  display: flex;
  align-items: center;
  padding-bottom: 30rpx;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  background-color: #f8f8f8;
  padding: 10rpx;
}

.header-text {
  flex: 1;
}

.detail-name {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  color: #333;
}

.detail-type {
  font-size: 30rpx;
  color: #666;
  background-color: #f5f5f5;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.detail-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 34rpx;
  background-color: #0051b4;
  border-radius: 4rpx;
}

.detail-description {
  font-size: 32rpx;
  line-height: 1.8;
  color: #333;
  text-align: justify;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.detail-info-list {
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  background-color: #fff;
  margin-bottom: 15rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.info-content {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

.home-button-container {
  margin-top: 60rpx;
  padding-bottom: 40rpx;
  display: flex;
  justify-content: center;
}

.home-button {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  background-color: #0051b4;
  color: #fff;
  font-weight: normal;
  box-shadow: 0 6rpx 12rpx rgba(0, 81, 180, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}