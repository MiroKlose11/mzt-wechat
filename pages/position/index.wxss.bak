/* 页面背景 */
page {
  background-color: #f7f7f7;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
}

/* 顶部导航栏和背景图 */
.custom-header {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: #3a60b9; /* 深蓝色 */
  height: 260rpx;
}

.nav-bg {
  width: 100%;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  z-index: 999;
  background-color: transparent;
  padding: 0 20rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  height: 100%;
  z-index: 3;
}

.back-btn {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  z-index: 3;
}

.page-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: 700;
  z-index: 3;
}

.nav-right {
  display: flex;
  align-items: center;
}

.share-btn, .more-btn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

/* 顶部标签页 */
.tab-header {
  display: flex;
  background-color: #fff;
  margin: -30rpx 30rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  z-index: 10;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 30rpx;
  color: #333;
  position: relative;
}

.tab-item.active {
  font-weight: bold;
  color: #3a60b9;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #3a60b9;
  border-radius: 3rpx;
}

/* 专科图标区 */
.icon-grid {
  background-color: #fff;
  padding: 20rpx 10rpx;
  margin-top: 20rpx;
}

.icon-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.icon-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
}

.icon-text {
  font-size: 24rpx;
  color: #333;
}

/* 搜索栏 */
.search-section {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 15rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff8e1;
  border-radius: 50rpx;
  padding: 15rpx 25rpx;
  border: 2rpx solid #ffa000;
}

.search-input {
  flex: 1;
  margin-left: 15rpx;
  font-size: 26rpx;
  color: #333;
}

.search-filter {
  display: flex;
  align-items: center;
  color: #ffa000;
  font-size: 26rpx;
}

.filter-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}

/* 功能快捷图标 */
.quick-icons {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  margin-top: 15rpx;
}

.quick-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}

.quick-icon-item text {
  font-size: 24rpx;
  color: #333;
}

/* 大图banner */
.banner-container {
  padding: 0 30rpx;
  margin-top: 15rpx;
}

.banner-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
}

/* 双图banner */
.double-banner {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 30rpx;
}

.banner-item {
  width: 48%;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-item-image {
  width: 100%;
  height: 200rpx;
  border-radius: 16rpx;
}

.banner-item-label {
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 200, 150, 0.8);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 0 16rpx 0 0;
}

/* 专科图标区 - 底部 */
.specialty-icons {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  background-color: #fff;
  margin-top: 15rpx;
}

.specialty-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.specialty-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.specialty-icon-item text {
  font-size: 24rpx;
  color: #333;
}

/* 岗位卡片 */
.position-card {
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.position-left {
  margin-right: 20rpx;
}

.position-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.position-right {
  flex: 1;
}

.position-title-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.position-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.position-salary {
  font-size: 28rpx;
  color: #999;
}

.position-info {
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.position-info-label {
  color: #666;
  margin-right: 10rpx;
}

.position-info-value {
  color: #333;
}

.position-stars {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.stars-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.stars {
  display: flex;
}

.star-icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 4rpx;
}

.position-actions {
  display: flex;
  margin-top: 20rpx;
}

.action-btn {
  margin: 0;
  padding: 0;
  line-height: 1.5;
  background-color: transparent;
  font-size: 26rpx;
  border-radius: 50rpx;
}

.action-btn::after {
  border: none;
}

.action-collect {
  padding: 8rpx 30rpx;
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.action-apply {
  padding: 8rpx 30rpx;
  background-color: #3a60b9;
  color: #fff;
}

.position-tag {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background-color: #3a60b9;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}
