/* 页面背景 */
page {
  background-color: #f7f7f7;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
}

/* 顶部导航栏和背景图 */
.custom-header {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: #4b99ff;
}
.nav-bg {
  width: 100%;
  height: 260rpx;
  display: block;
}

.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  z-index: 999;
  background-color: #4b99ff;
  padding: 0 20rpx;
}

.nav-left {
  display: flex;
  align-items: center;
  height: 100%;
  z-index: 3;
}

.back-btn {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  z-index: 3;
}

.page-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: 700;
  z-index: 3;
}

.nav-right {
  display: flex;
  align-items: center;
}

.share-btn, .more-btn {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

/* 整合的浮起模块 */
.floating-module {
  margin: -30rpx 30rpx 20rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 20;
  overflow: hidden;
}

/* 顶部标签页 - 调整 */
.tab-header {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  overflow: hidden;
  position: relative;
  z-index: 10;
  margin: 0;
  border-radius: 0;
  box-shadow: none;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 25rpx 0;
  font-size: 30rpx;
  color: #333;
  position: relative;
}

.tab-item.active {
  font-weight: bold;
  color: #3a60b9;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #3a60b9;
  border-radius: 3rpx;
}

/* 专科图标区 - 调整 */
.icon-grid {
  background-color: #fff;
  padding: 20rpx 10rpx;
  margin-top: 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.icon-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.icon-image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 8rpx;
}

.icon-text {
  font-size: 24rpx;
  color: #333;
}

/* 搜索栏 - 调整 */
.search-section {
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 0;
  border-radius: 0 0 16rpx 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff8e1;
  border-radius: 50rpx;
  padding: 15rpx 25rpx;
  border: 2rpx solid #ffa000;
}

.search-input {
  flex: 1;
  margin-left: 15rpx;
  font-size: 26rpx;
  color: #333;
}

.search-filter {
  display: flex;
  align-items: center;
  color: #ffa000;
  font-size: 26rpx;
}

.filter-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 8rpx;
}

/* 功能快捷图标 - 第一个红框 */
.category-icons {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  margin: 0 30rpx;
  background-color: #f7f7f7;
  border-radius: 0;
  box-shadow: none;
}

.category-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.category-icon-item text {
  font-size: 24rpx;
  color: #333;
}

/* Banner模块 - 包含轮播图和双图 */
.banner-module {
  margin: 20rpx 30rpx;
  border-radius: 0;
  background-color: transparent;
  box-shadow: none;
  overflow: hidden;
  padding: 0;
}

/* 大图banner */
.banner-container {
  padding: 0;
  margin: 0 0 20rpx 0;
}

.banner-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
}

/* 双图banner */
.double-banner {
  display: flex;
  justify-content: space-between;
  padding: 0;
}

.banner-item {
  width: 48%;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.banner-item-image {
  width: 100%;
  height: 180rpx;
  border-radius: 12rpx;
}

.banner-item-label {
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: rgba(0, 200, 150, 0.8);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 0 16rpx 0 0;
}

/* 专科分类 - 第二个红框 */
.specialty-categories {
  display: flex;
  justify-content: space-between;
  padding: 25rpx 30rpx;
  margin: 0 30rpx;
  background-color: #f7f7f7;
  border-radius: 0;
}

.specialty-category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.specialty-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.specialty-category-item text {
  font-size: 26rpx;
  color: #333;
}

/* 医生卡片样式 */
.doctor-card {
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.doctor-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 0;
  border-bottom: none;
}

.doctor-header-left {
  display: flex;
  flex-direction: column;
}

.doctor-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.doctor-job {
  font-size: 26rpx;
  color: #666;
}

.doctor-header-right {
  display: flex;
  align-items: center;
}

.detail-btn-text {
  color: #3a60b9;
  font-size: 26rpx;
}

.doctor-info-container {
  padding: 0;
}

.doctor-info {
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
}

.doctor-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.doctor-value {
  font-size: 26rpx;
  color: #333;
}

.doctor-stars-row {
  display: flex;
  align-items: center;
  margin-bottom: 0;
}

.stars {
  display: flex;
}

.star-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 5rpx;
}

.doctor-action-container {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.doctor-btn {
  padding: 0;
  margin: 0;
  height: 80rpx;
  line-height: 80rpx;
  background-color: transparent;
  font-size: 28rpx;
  border-radius: 6rpx;
}

.doctor-btn::after {
  border: none;
}

.collect-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #666;
  margin-right: 20rpx;
  font-weight: normal;
}

.apply-btn {
  flex: 1;
  background-color: #3a60b9;
  color: #fff;
  font-weight: normal;
}

/* 旧岗位卡片样式（保留但不使用）*/
.position-card {
  margin: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.position-left {
  margin-right: 20rpx;
}

.position-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}

.position-right {
  flex: 1;
}

.position-title-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.position-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.position-salary {
  font-size: 28rpx;
  color: #999;
}

.position-info {
  margin-bottom: 8rpx;
  font-size: 26rpx;
}

.position-info-label {
  color: #666;
  margin-right: 10rpx;
}

.position-info-value {
  color: #333;
}

.position-stars {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.stars-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.position-actions {
  display: flex;
  margin-top: 20rpx;
}

.action-btn {
  margin: 0;
  padding: 0;
  line-height: 1.5;
  background-color: transparent;
  font-size: 26rpx;
  border-radius: 50rpx;
}

.action-btn::after {
  border: none;
}

.action-collect {
  padding: 8rpx 30rpx;
  background-color: #f0f0f0;
  color: #666;
  margin-right: 20rpx;
}

.action-apply {
  padding: 8rpx 30rpx;
  background-color: #3a60b9;
  color: #fff;
}

.position-tag {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background-color: #3a60b9;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
} 

.doctor-card-main {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  padding: 20rpx 30rpx 0 30rpx;
}
.doctor-card-img {
  width: 180rpx;
  height: 180rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  display: flex;
  align-items: flex-start;
  justify-content: center;
}
.doctor-avatar {
  width: 170rpx;
  height: 170rpx;
  border-radius: 20rpx;
  background: #f2f2f2;
  object-fit: cover;
}
.doctor-card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
} 