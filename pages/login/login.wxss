page {
  background: linear-gradient(180deg, #287BFF 0%, #287BFF 200rpx, #f5f5f5 200rpx);
  min-height: 100vh;
}

.login-container {
  min-height: 100vh;
  position: relative;
}

/* 顶部背景区域 */
.header-bg {
  height: 200rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 0 60rpx;
  overflow: hidden;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  z-index: 2;
}

.logo-bg {
  position: absolute;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 200rpx;
  height: 200rpx;
  opacity: 0.3;
}

/* 登录表单区域 */
.login-form {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx;
  padding: 60rpx 60rpx 80rpx;
  position: relative;
  z-index: 2;
  min-height: calc(100vh - 160rpx);
}

/* 微信授权登录 */
.wechat-login {
  text-align: center;
  margin-bottom: 80rpx;
}

.wechat-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 40rpx;
}

.wechat-btn {
  width: 120rpx;
  height: 120rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
}

.wechat-icon {
  width: 60rpx;
  height: 60rpx;
}

/* 登录方式切换 */
.login-tabs {
  display: flex;
  margin-bottom: 60rpx;
  position: relative;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #999;
  padding: 20rpx 0;
  position: relative;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #287BFF;
  border-radius: 3rpx;
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.phone-input,
.code-input,
.password-input {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 30rpx;
  height: 100rpx;
}

.country-code {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 2rpx solid #e9ecef;
}

.phone-field,
.code-field,
.password-field {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.phone-field::placeholder,
.code-field::placeholder,
.password-field::placeholder {
  color: #999;
}

.get-code-btn {
  font-size: 28rpx;
  color: #287BFF;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  background: rgba(40, 123, 255, 0.1);
  white-space: nowrap;
}

.get-code-btn.disabled {
  color: #999;
  background: #f0f0f0;
}

.forgot-password {
  font-size: 28rpx;
  color: #287BFF;
  white-space: nowrap;
}

/* 用户协议 */
.agreement {
  display: flex;
  align-items: center;
  margin-bottom: 60rpx;
  font-size: 26rpx;
  color: #666;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.checkbox.checked {
  background: #287BFF;
  border-color: #287BFF;
}

.check-icon {
  width: 20rpx;
  height: 20rpx;
}

.agreement-text {
  color: #666;
}

.link-text {
  color: #287BFF;
  margin: 0 8rpx;
}

/* 登录按钮 */
