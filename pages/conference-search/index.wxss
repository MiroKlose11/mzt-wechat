page {
  background: #f5f5f5;
}

.conference-search-page {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 头部区域（蓝色） */
.header {
  background: #4b99ff;
  position: relative;
  z-index: 1;
}

.content {
  position: relative;
  z-index: 2;
}

.banner-wrapper {
  position: relative;
  z-index: 3;
  padding: 0 30rpx;
}

/* 导航区域 */
.nav {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  position: relative;
}

.nav-left {
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
}

.nav-right {
  position: absolute;
  right: 30rpx;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.more-icon,
.share-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 搜索框 */
.search-bar {
  margin: 10rpx 30rpx 20rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 64rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: .8;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.ph {
  color: #bfbfbf;
}

/* Banner */
.banner-wrapper {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.banner {
  width: 100%;
  height: 100%;
  background: #f45b6a;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(228,79,95,.25);
  position: relative;
  overflow: hidden;
}

.banner-dots {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
  margin: 0;
  display: flex;
  justify-content: center;
  gap: 14rpx;
}

.banner-dots .dot {
  width: 28rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 8rpx;
}

/* 主要内容区域 - 左右布局（平铺） */
.content .main-content {
  display: flex;
  padding: 0 30rpx 40rpx 0; /* 左侧去 padding，让列表贴齐屏幕左侧 */
  gap: 20rpx;
}

/* 左侧分类导航 - 平铺在页面（白底、无卡片圆角） */
.category-nav {
  width: 200rpx;
  flex-shrink: 0;
  background: #fff;
  border-radius: 0;
  padding: 8rpx 0;
  border-right: 2rpx solid #ededed;
}

.nav-item {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.nav-item + .nav-item {
  border-top: 2rpx solid #f2f2f2;
}

.nav-item.active::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #4b99ff;
}

.nav-text {
  font-size: 26rpx;
  color: #666;
}

.nav-item.active .nav-text {
  color: #333;
  font-weight: 600;
}

/* 右侧内容区域 - 平铺，透明背景 */
.content-area {
  flex: 1;
  padding: 0 0 0 30rpx;
  background: transparent;
  border-radius: 0;
}

/* 区块标题 - 蓝色小圆点+粗体标题 */
.section {
  padding: 24rpx 0 12rpx;
  border-bottom: 2rpx solid #f2f2f2;
}
.section:last-child {
  border-bottom: none;
}
.section-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.section-title::before {
  content: '';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #4b99ff;
  margin-right: 12rpx;
}

/* 标签网格：每行三列，间距更紧凑 */
.tag-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx 18rpx;
  padding-bottom: 16rpx;
}

/* 标签按钮 - 胶囊/描边，选中为主色实底 */
.tag-item {
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #dcdcdc;
  transition: background .2s ease, border-color .2s ease, color .2s ease;
}

.tag-item.selected {
  background: #1e5ed6;
  border-color: #1e5ed6;
}

.tag-text {
  font-size: 26rpx;
  color: #333;
}

.tag-item.selected .tag-text {
  color: #fff;
  font-weight: 600;
}