page {
  background: #f5f5f5;
}

.academic-page {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  background: #14c8c8;
  position: relative;
  z-index: 1;
}

.content {
  position: relative;
  z-index: 2;
}

.banner-wrapper {
  position: relative;
  z-index: 3;
  padding: 0 30rpx;
}

/* 导航区域 */
.nav {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 30rpx;
  position: relative;
}

.nav-left {
  position: absolute;
  left: 30rpx;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
}

/* 搜索框 */
.search-bar {
  margin: 10rpx 30rpx 20rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 64rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  opacity: 0.8;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.ph {
  color: #bfbfbf;
}

/* Banner */
.banner-wrapper {
  padding: 0 30rpx;
  margin-bottom: 16rpx;
}

.banner {
  width: 100%;
  height: 100%;
  background: #f45b6a;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 16rpx rgba(228, 79, 95, 0.25);
  position: relative;
  overflow: hidden;
}

.banner-dots {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 10rpx;
  margin: 0;
  display: flex;
  justify-content: center;
  gap: 14rpx;
}

.banner-dots .dot {
  width: 28rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 8rpx;
}

/* 内容区 */
.content {
  background: transparent;
  margin-top: 0;
  padding: 0 0 40rpx;
}

/* 网格区域 */
.grid {
  display: flex;
  gap: 16rpx;
  align-items: flex-start;
  padding: 0 20rpx;
}

.left-col {
  width: 216rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.right-col {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.big-card {
  border-radius: 16rpx;
  padding: 20rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.06);
}

.big-card.orange {
  background: #ff9800;
  height: 188rpx;
}

.big-card.cyan {
  background: #51d5e0;
  height: 96rpx;
}

.big-title {
  font-size: 28rpx;
  font-weight: 600;
}

.big-illustration {
  height: 96rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.9);
  opacity: 0.95;
}

.small-card {
  width: calc(50% - 16rpx);
  margin: 8rpx;
  height: 112rpx;
  background: #fff;
  border: 0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 14rpx;
  box-sizing: border-box;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.06);
}

.icon-space {
  display: none;
}

.small-text {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  text-align: center;
}

/* ===== 学术动态 & 学术会议 ===== */
/* 学术动态 & 学术会议 */
.section {
  padding: 14rpx 18rpx 0;
}

/* 模块标题行 */
.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 18rpx 14rpx;
  padding: 14rpx 16rpx;
  border-radius: 16rpx;
}

.section-head .head-left {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 0;
  background: transparent;
  color: #fff;
}

.section-head .head-icon {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
}

.section-head .head-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
}

.section-head .head-more {
  width: 28rpx;
  height: 28rpx;
  opacity: 1;
}

.section-head.teal {
  background: #0a7d87;
}

.section-head.blue {
  background: #177da6;
}

.section-head.plain {
  background: transparent !important;
  margin: 0 18rpx 10rpx;
  padding: 0 4rpx;
}

.section-head.plain .head-title {
  color: #2e2e2e;
}

.section-head.plain .head-icon {
  filter: none;
}

.section-head.plain .head-more {
  opacity: 0.9;
}

/* 学术动态 */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.06);
}

.news-section {
  margin-bottom: 32rpx;
}

.news-container {
  overflow: hidden;
}

.news-container .section-head {
  margin: 0;
  border-radius: 16rpx 16rpx 0 0;
}

.news-list {
  padding: 0 32rpx;
  background: white;
  border-radius: 0 0 16rpx 16rpx;
  margin-bottom: 16rpx;
}

.news-item {
  display: flex;
  gap: 18rpx;
  padding: 22rpx 16rpx;
  align-items: center;
}

.news-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.news-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #2e2e2e;
  line-height: 1.4;
}

.news-desc {
  font-size: 24rpx;
  color: #8f99a3;
  line-height: 1.6;
}

.news-thumb {
  width: 168rpx;
  height: 120rpx;
  border-radius: 10rpx;
  background: #e9f0f6;
  object-fit: cover;
}

.divider {
  height: 2rpx;
  background: #eef2f6;
  margin: 12rpx 16rpx;
  border-radius: 2rpx;
}

/* 学术会议 */
.conf-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 12rpx 14rpx;
}

.conf-card {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx;
  border: 1rpx solid #eef2f6;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

.conf-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.conf-left {
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.conf-thumb {
  width: 160rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #2787e5 0%, #2b86ff 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.thumb-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.thumb-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 1;
}

.conf-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.conf-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2b2f33;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.meta-row {
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-wrap: wrap;
}

.meta {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: #f3f6f9;
}

.meta-icon {
  width: 22rpx;
  height: 22rpx;
  opacity: 0.95;
}

.meta-text {
  font-size: 24rpx;
  color: #6b7785;
}

.meta-date {
  background: #e6f3ff;
}

.meta-date .meta-text {
  color: #177da6;
}

.meta-loc {
  background: #f5f7fa;
}

.meta-loc .meta-text {
  color: #667285;
}

.org-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  margin-top: 12rpx;
  margin-left: 0;
  border-top: 2rpx solid #eef2f6;
  padding-top: 12rpx;
  padding-left: 0;
}

.org-text {
  font-size: 22rpx;
  color: #9aa4ae;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex-shrink: 0;
}

/* 学术组织 */
.org-section {
  margin-top: 24rpx;
}

.org-list {
  margin-top: 24rpx;
  gap: 24rpx;
  display: flex;
  flex-direction: column;
}

.org-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.org-left {
  width: 100rpx;
  flex-shrink: 0;
}

.org-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  background: #4285f4;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.org-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.org-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

.org-meta-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.org-meta {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.org-meta-label {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

.org-meta-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 学术大赛 */
.contest-section {
  margin-top: 24rpx;
}

.contest-list {
  margin-top: 24rpx;
  gap: 24rpx;
  display: flex;
  flex-direction: column;
}

.contest-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.contest-top {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.contest-left {
  width: 180rpx;
  flex-shrink: 0;
}

.contest-thumb {
  width: 180rpx;
  height: 120rpx;
  border-radius: 12rpx;
  background: #4285f4;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.contest-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.contest-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

/* 学术著作 */
.works-section {
  margin-top: 24rpx;
}

.works-container {
  overflow: hidden;
}

.works-container .section-head {
  margin: 0;
  border-radius: 16rpx 16rpx 0 0;
}

.works-grid {
  padding: 32rpx;
  background: white;
  border-radius: 0 0 16rpx 16rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.work-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center;
  text-align: center;
}

.work-thumb {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background: #4285f4;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.work-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.work-author {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 学术课程 */
.course-section {
  margin-top: 24rpx;
  margin-bottom: 32rpx;
}

.course-container {
  overflow: hidden;
}

.course-container .section-head {
  margin: 0;
  border-radius: 16rpx 16rpx 0 0;
}

.course-list {
  background: white;
  border-radius: 0 0 16rpx 16rpx;
}

.course-list .divider {
  height: 1rpx;
  background: #e5e7eb;
  margin: 0;
}

.course-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  padding: 24rpx 0;
  margin: 0 32rpx;
  position: relative;
  padding-bottom: 64rpx;
}

.course-body-top {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.course-inner-divider {
  position: absolute;
  left: 32rpx;
  right: 32rpx;
  bottom: 52rpx; /* 更靠近标签顶部，和原型更接近 */
  height: 1rpx;
  background: #e5e7eb;
}

.course-left {
  width: 160rpx;
  flex-shrink: 0;
}

.course-thumb {
  width: 160rpx;
  height: 120rpx;
  background: #4A90E2;
  border-radius: 12rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.course-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-height: 120rpx; /* 与缩略图等高，便于底部对齐 */
  justify-content: space-between; /* 让顶部信息和底部标签分散对齐 */
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  line-height: 1.4;
}

.course-lecturer {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

.course-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin: 8rpx 0 0;
}

.course-tag {
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
  line-height: 1.4;
}

.course-tag-free {
  background: #fef3c7;
  color: #d97706;
}

.course-tag-paid {
  background: #fef3c7;
  color: #d97706;
}

.course-tag-accent {
  background: #ffe8b3;
  color: #b45309;
}

.course-org {
  font-size: 22rpx;
  color: #9aa4ae;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 8rpx;
  position: absolute;
  bottom: 16rpx;
  left: 32rpx;
  right: 32rpx;
}