/* 头部区域 */
/* 头部与层级 */
.header { background: #14c8c8; position: relative; z-index: 1; }
.content { position: relative; z-index: 2; }
.banner-wrapper { position: relative; z-index: 3; padding: 0 30rpx; }

/* 网格区域 */
.grid { display: flex; gap: 20rpx; align-items: flex-start; padding: 0 24rpx; }
.left-col { width: 220rpx; display: flex; flex-direction: column; gap: 20rpx; }

/* 右侧卡片：不显示icon，占位隐藏，文字单行且水平垂直居中 */
.right-col { flex: 1; display: flex; flex-wrap: wrap; margin: -10rpx; }
.small-card { width: calc(50% - 20rpx); margin: 10rpx; height: 120rpx; background: #fff; border: 0; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; padding: 0 20rpx; box-sizing: border-box; box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.06); }
.icon-space { display: none; }
.small-text { font-size: 28rpx; color: #333; white-space: nowrap; text-align: center; }
/* 导航区域：与系统胶囊对齐（高度由 WXML 内联 style 控制） */
.nav { /* height 由内联 style 控制 */ display: flex; align-items: center; justify-content: center; padding: 0 30rpx; position: relative; }
.nav-left { position: absolute; left: 30rpx; top: 0; bottom: 0; display: flex; align-items: center; }
.back-icon { width: 40rpx; height: 40rpx; }
.nav-title { color: #fff; font-size: 34rpx; font-weight: 600; }

/* 搜索框 */
.search-bar { margin: 16rpx 30rpx 24rpx; height: 64rpx; background: #fff; border-radius: 64rpx; display: flex; align-items: center; padding: 0 20rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.search-icon { width: 32rpx; height: 32rpx; margin-right: 16rpx; opacity: 0.8; }
.search-input { flex: 1; font-size: 26rpx; color: #333; }
.ph { color: #bfbfbf; }

/* Banner 16:9 放在内容区，向上重叠一半 */
.banner-wrapper { padding: 0 30rpx; margin-bottom: 30rpx; }
.banner { width: 100%; height: 100%; background: #f45b6a; border-radius: 24rpx; display: flex; align-items: center; justify-content: center; color: #fff; font-size: 48rpx; font-weight: 600; box-shadow: 0 8rpx 16rpx rgba(228,79,95,0.25); position: relative; overflow: hidden; }
.banner-dots { position: absolute; left: 50%; transform: translateX(-50%); bottom: 10rpx; margin: 0; display: flex; justify-content: center; gap: 14rpx; }
.banner-dots .dot { width: 28rpx; height: 8rpx; background: rgba(255,255,255,0.85); border-radius: 8rpx; }

/* 内容区灰底，顶部直角与头部直接衔接（不使用圆角过渡） */
.content { background: #efefef; margin-top: 0; padding: 24rpx 0 40rpx; }
.big-card { border-radius: 16rpx; padding: 20rpx; color: #fff; display: flex; flex-direction: column; justify-content: space-between; box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.06); }
.big-card.orange { background: #ff9800; height: 200rpx; }
.big-card.cyan { background: #51d5e0; height: 100rpx; }
.big-title { font-size: 28rpx; font-weight: 600; }
.big-illustration { height: 96rpx; border-radius: 12rpx; background: rgba(255,255,255,0.9); opacity: 0.95; }
