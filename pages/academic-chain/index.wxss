/* ===== 学术动态 & 学术会议 ===== */
.section { padding: 14rpx 18rpx 0; }

/* 头部标签（左侧色块+图标+文字，右侧箭头） */
/* ===== 模块标题行：整行背景（修复对齐） ===== */
.section-head { display: flex; align-items: center; justify-content: space-between; margin: 0 18rpx 14rpx; padding: 14rpx 16rpx; border-radius: 16rpx; }
.section-head .head-left { display: inline-flex; align-items: center; gap: 12rpx; padding: 0; background: transparent; color: #fff; }
.section-head .head-icon { width: 28rpx; height: 28rpx; filter: brightness(0) invert(1); }
.section-head .head-title { font-size: 28rpx; font-weight: 600; color: #fff; }
.section-head .head-more { width: 28rpx; height: 28rpx; opacity: 1; }
.section-head.teal { background: #0a7d87; }
 .section-head.blue { background: #177da6; }
 /* 移除了误加到 head-left 的背景规则，保留整行着色 */

/* 学术动态 列表卡片 */
.card { background: #fff; border-radius: 16rpx; box-shadow: 0 8rpx 18rpx rgba(0,0,0,.06); }
/* ===== 学术动态（根据图2优化） ===== */
.news-list { padding: 10rpx 16rpx; margin-bottom: 16rpx; }
.news-item { display: flex; gap: 18rpx; padding: 22rpx 16rpx; align-items: center; }
.news-text { flex: 1; display: flex; flex-direction: column; gap: 12rpx; }
.news-title { font-size: 32rpx; font-weight: 700; color: #2e2e2e; line-height: 1.4; }
.news-desc { font-size: 24rpx; color: #8f99a3; line-height: 1.6; }
.news-thumb { width: 168rpx; height: 120rpx; border-radius: 10rpx; background: #e9f0f6; object-fit: cover; }
.divider { height: 2rpx; background: #eef2f6; margin: 12rpx 16rpx; border-radius: 2rpx; }
/* 移除旧版分隔线定义，统一使用上方新版样式 */
/* .divider { height: 1px; background: #e9edf2; margin: 0 12rpx; } */

/* 标题栏去背景方案 */
.section-head.plain { background: transparent !important; margin: 0 18rpx 10rpx; padding: 0 4rpx; }
.section-head.plain .head-title { color: #2e2e2e; }
.section-head.plain .head-icon { filter: none; }
.section-head.plain .head-more { opacity: .9; }

/* 学术会议 模块（更新） */
.conf-list { display: flex; flex-direction: column; gap: 16rpx; padding: 0 12rpx 14rpx; }
.conf-card { display: flex; flex-direction: column; background: #fff; border-radius: 16rpx; padding: 18rpx; border: 1rpx solid #eef2f6; box-shadow: 0 6rpx 16rpx rgba(0,0,0,.04); overflow: hidden; }
.conf-top {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}
/* 左侧区：图片 + 主办单位 */
.conf-left { width: 180rpx; display: flex; flex-direction: column; align-items: flex-start; }
.conf-thumb { width: 160rpx; height: 120rpx; border-radius: 12rpx; background: linear-gradient(135deg, #2787e5 0%, #2b86ff 100%); display: flex; align-items: center; justify-content: center; overflow: hidden; }
.thumb-img { width: 100%; height: 100%; object-fit: cover; }
.thumb-icon { width: 60rpx; height: 60rpx; opacity: 1; }
/* 移除 host-text，因为主/承办单位在一行展示 */
