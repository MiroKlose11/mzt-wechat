  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: nowrap;
  margin-top: 12rpx;
  margin-left: 0;
  border-top: 2rpx solid #eef2f6;
  padding-top: 12rpx;
  padding-left: 0;
}
.org-text { font-size: 22rpx; color: #9aa4ae; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; flex-shrink: 0; }
