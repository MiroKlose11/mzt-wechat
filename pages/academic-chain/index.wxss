/* 右侧区保持 */
.conf-body { flex: 1; display: flex; flex-direction: column; gap: 12rpx; }
.conf-title { font-size: 30rpx; font-weight: 700; color: #2b2f33; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; word-break: break-all; }
.meta-row { display: flex; gap: 12rpx; align-items: center; flex-wrap: wrap; }
.meta { display: inline-flex; align-items: center; gap: 8rpx; padding: 6rpx 12rpx; border-radius: 999rpx; background: #f3f6f9; }
.meta-icon { width: 22rpx; height: 22rpx; opacity: .95; }
.meta-text { font-size: 24rpx; color: #6b7785; }
.meta-date { background: #e6f3ff; }
.meta-date .meta-text { color: #177da6; }
.meta-loc { background: #f5f7fa; }
.meta-loc .meta-text { color: #667285; }
