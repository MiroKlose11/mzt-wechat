/* 页面背景 */
page {
  background-color: #f7f7f7;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
  padding-bottom: 120rpx; /* 为底部导航栏留出空间 */
}

/* 顶部导航栏和背景图 */
.custom-header {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: #4b99ff;
}

.nav-bg {
  width: 100%;
  display: block;
}

.custom-nav-bar {
  position: fixed; /* 改为fixed定位 */
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 44px;
  z-index: 999; /* 提高层级 */
  background-color: #4b99ff; /* 添加背景色 */
}

.nav-left {
  display: flex;
  align-items: center;
  height: 100%;
  z-index: 3;
  margin-left: 20rpx;
}

.back-btn {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  z-index: 3;
}

.page-title {
  font-size: 36rpx;
  color: #fff;
  font-weight: 700;
  z-index: 3;
}

/* 搜索栏 - 在背景图下方 */
.search-section {
  padding: 0 30rpx;
  margin-top: -50rpx;
  position: relative;
  z-index: 10;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 50rpx;
  padding: 15rpx 25rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.search-input {
  flex: 1;
  margin-left: 15rpx;
  font-size: 26rpx;
  color: #333;
}

.search-btn {
  background: #07c160;
  color: #fff;
  padding: 12rpx 30rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
}

/* 页面内容区域 */
.page-content {
  padding: 20rpx;
}

/* 卡片容器通用样式 */
.card-container {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: 100%;
  box-sizing: border-box;
}

/* 分类导航 */
.category-container {
  padding: 20rpx;
}

.category-row1,
.category-row2 {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.category-row2 {
  margin-bottom: 0;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 8rpx;
  margin: 0 8rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.nav-item.active {
  background: #4b99ff;
  color: #fff;
  border-color: #4b99ff;
}

.nav-item.hot {
  background: #fff0f0;
  color: #e53935;
  border: 2rpx solid #e53935;
  font-weight: 700;
}

.nav-item.hot.active {
  background: #e53935;
  color: #fff;
  border-color: #e53935;
}

/* 顶部大图卡片 */
.banner-card {
  padding: 0;
  overflow: hidden;
}

.banner-placeholder {
  width: 100%;
  height: 220rpx;
  background: #e8f0fb;
  border-radius: 16rpx;
}

/* 医生图片网格 */
.doctor-grid {
  padding: 20rpx;
}

.doctor-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.doctor-row:last-child {
  margin-bottom: 0;
}

/* 第一行 - 大图3个 */
.doctor-row-big {
  justify-content: space-between;
}

.doctor-item-big {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 31%;
}

.doctor-img-big {
  width: 200rpx;
  height: 200rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

/* 第二行 - 小图4个 */
.doctor-row-small {
  justify-content: space-between;
}

.doctor-item-small {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 23%;
}

.doctor-img-small {
  width: 150rpx;
  height: 150rpx;
  background: #f0f0f0;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.doctor-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 人员卡片 - 新样式 */
.personnel-card {
  padding: 30rpx;
  position: relative;
}

.personnel-header {
  display: flex;
  margin-bottom: 20rpx;
}

.avatar-circle {
  margin-right: 20rpx;
  flex-shrink: 0;
}

.avatar-placeholder-round {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.personnel-basic-info {
  flex: 1;
}

.personnel-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.personnel-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.personnel-position {
  font-size: 24rpx;
  color: #666;
}

.personnel-hospital {
  font-size: 26rpx;
  color: #4b99ff;
  margin-bottom: 8rpx;
  display: block;
}

.personnel-specialty {
  font-size: 24rpx;
  color: #666;
}

.personnel-tags {
  display: flex;
  margin-bottom: 20rpx;
}

.personnel-tag {
  background-color: #ff9800;
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
  margin-right: 12rpx;
}

.personnel-tag:nth-child(2) {
  background-color: #4caf50;
}

.personnel-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
}

.action-follow {
  padding: 8rpx 30rpx;
  background-color: rgba(75, 153, 255, 0.1);
  color: #4b99ff;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.action-message {
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(75, 153, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-icon {
  width: 30rpx;
  height: 30rpx;
}

/* 加载更多和到底提示 */
.load-more, .page-end {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

.page-end {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 100rpx; /* 为底部导航栏留出空间 */
}

.end-line {
  width: 80rpx;
  height: 1px;
  background: #ddd;
}

.end-text {
  margin: 0 20rpx;
} 