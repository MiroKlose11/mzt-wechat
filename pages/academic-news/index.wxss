page { background: #f5f5f5; }
.news-page { background: #f5f5f5; min-height: 100vh; }

/* 头部区域（蓝色） */
.header { background: #4b99ff; position: relative; z-index: 1; }
.content { position: relative; z-index: 2; }
.banner-wrapper { position: relative; z-index: 3; padding: 0 30rpx; }

/* 导航区域 */
.nav { display: flex; align-items: center; justify-content: center; padding: 0 30rpx; position: relative; }
.nav-left { position: absolute; left: 30rpx; top: 0; bottom: 0; display: flex; align-items: center; }
.back-icon { width: 40rpx; height: 40rpx; }
.nav-title { color: #fff; font-size: 34rpx; font-weight: 600; }

/* 搜索框 */
.search-bar { margin: 10rpx 30rpx 20rpx; height: 56rpx; background: #fff; border-radius: 64rpx; display: flex; align-items: center; padding: 0 20rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.search-icon { width: 32rpx; height: 32rpx; margin-right: 16rpx; opacity: .8; }
.search-input { flex: 1; font-size: 26rpx; color: #333; }
.ph { color: #bfbfbf; }

/* Banner */
.banner-wrapper { padding: 0 30rpx; margin-bottom: 16rpx; }
.banner { width: 100%; height: 100%; background: #f45b6a; border-radius: 24rpx; display: flex; align-items: center; justify-content: center; color: #fff; font-size: 48rpx; font-weight: 600; box-shadow: 0 8rpx 16rpx rgba(228,79,95,.25); position: relative; overflow: hidden; }
.banner-dots { position: absolute; left: 50%; transform: translateX(-50%); bottom: 10rpx; margin: 0; display: flex; justify-content: center; gap: 14rpx; }
.banner-dots .dot { width: 28rpx; height: 8rpx; background: rgba(255, 255, 255, 0.85); border-radius: 8rpx; }

/* 快捷模块（3等分绿底按钮） */
.quick-links { display: grid; grid-template-columns: repeat(3, 1fr); gap: 12rpx; padding: 0 30rpx 12rpx; }
.quick-link { background: #14c8c8; color: #fff; border-radius: 0; height: 72rpx; display: flex; align-items: center; justify-content: center; box-shadow: none; }
.quick-text { font-size: 28rpx; font-weight: 400; letter-spacing: 0; }

/* Tab导航 - 独立成行，宽度与屏幕一致 */
.tab-nav { display: flex; background: #fff; margin: 0; padding: 0; border-bottom: 1rpx solid #f0f0f0; }
.tab-item { flex: 1; text-align: center; padding: 24rpx 0; position: relative; }
.tab-text { font-size: 28rpx; color: #666; font-weight: 400; }
.tab-item.active .tab-text { color: #4b99ff; font-weight: 600; }
.tab-item.active::after { content: ''; position: absolute; bottom: 0; left: 50%; transform: translateX(-50%); width: 40rpx; height: 4rpx; background: #4b99ff; border-radius: 2rpx; }

/* 新闻列表 - 独立卡片式布局 */
.news-list { padding: 20rpx 30rpx; }
.news-card { display: flex; align-items: stretch; background: #fff; border-radius: 16rpx; padding: 40rpx 30rpx 24rpx; margin-bottom: 20rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); min-height: 160rpx; }
.news-card:last-child { margin-bottom: 0; }
.news-content { flex: 1; margin-right: 20rpx; display: flex; flex-direction: column; }
.news-title { display: block; font-size: 30rpx; color: #333; line-height: 1.4; margin-bottom: 16rpx; font-weight: 500; }
.news-time { font-size: 24rpx; color: #999; margin-top: auto; padding-top: 8rpx; }
.news-image { width: 160rpx; height: 120rpx; border-radius: 12rpx; flex-shrink: 0; align-self: center; }