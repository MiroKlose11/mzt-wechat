page {
  background: #ffffff;
  min-height: 100vh;
}

.forgot-password-container {
  min-height: 100vh;
  padding: 120rpx 60rpx 40rpx 60rpx;
  position: relative;
  background: #ffffff;
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 100rpx;
  left: 60rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 标题 */
.title {
  margin-top: 120rpx;
  margin-bottom: 120rpx;
  text-align: center;
}

.title-text {
  font-size: 52rpx;
  font-weight: 500;
  color: #333333;
}

/* 忘记密码表单 */
.forgot-password-form {
  background: transparent;
  padding: 0;
}

/* 输入框组 */
.input-group {
  margin-bottom: 60rpx;
}

.phone-input,
.code-input,
.password-input {
  display: flex;
  align-items: center;
  background: transparent;
  border: none;
  border-bottom: 2rpx solid #e0e0e0;
  padding: 20rpx 0;
  height: 80rpx;
  position: relative;
}

.country-code {
  font-size: 32rpx;
  color: #333333;
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid #e0e0e0;
}

.phone-field,
.code-field,
.password-field {
  flex: 1;
  font-size: 32rpx;
  color: #333333;
  background: transparent;
  border: none;
  outline: none;
}

.phone-field::placeholder,
.code-field::placeholder,
.password-field::placeholder {
  color: #999999;
}

.get-code-btn {
  font-size: 28rpx;
  color: #1976D2;
  padding: 0;
  background: transparent;
  white-space: nowrap;
  text-decoration: none;
}

.get-code-btn.disabled {
  color: #cccccc;
  background: transparent;
}

/* 密码显示切换按钮 */
.eye-icon {
  position: absolute;
  right: 40rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.eye-icon image {
  width: 32rpx;
  height: 32rpx;
}

/* 确定按钮 */
.reset-btn {
  width: 100%;
  height: 100rpx;
  background: #1976D2;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
  margin-top: 100rpx;
  box-shadow: none;
}

.reset-btn.disabled {
  background: #cccccc;
  box-shadow: none;
}