<view class="forgot-password-container">
  <!-- 返回按钮 -->
  <view class="back-btn" bindtap="goBack">
    <image class="back-icon" src="/images/nav/back.png"></image>
  </view>

  <!-- 标题 -->
  <view class="title">
    <text class="title-text">忘记密码</text>
  </view>

  <!-- 重置密码表单 -->
  <view class="forgot-password-form">
    <!-- 手机号输入 -->
    <view class="input-group">
      <view class="phone-input">
        <text class="country-code">+86</text>
        <input class="phone-field" type="number" placeholder="请输入手机号码" value="{{phone}}" bindinput="onPhoneInput" maxlength="11" />
      </view>
    </view>

    <!-- 验证码输入 -->
    <view class="input-group">
      <view class="code-input">
        <input class="code-field" type="number" placeholder="请输入手机验证码" value="{{smsCode}}" bindinput="onSmsCodeInput" maxlength="6" />
        <view class="get-code-btn {{canGetCode ? '' : 'disabled'}}" bindtap="getSmsCode">
          {{codeText}}
        </view>
      </view>
    </view>

    <!-- 新密码输入 -->
    <view class="input-group">
      <view class="password-input">
        <input class="password-field" type="{{showPassword ? 'text' : 'password'}}" placeholder="请输入新密码" value="{{password}}" bindinput="onPasswordInput" />
        <view class="eye-icon" bindtap="togglePasswordVisibility">
          <image src="{{showPassword ? '/images/eye-open.png' : '/images/eye-close.png'}}"></image>
        </view>
      </view>
    </view>

    <!-- 确认密码输入 -->
    <view class="input-group">
      <view class="password-input">
        <input class="password-field" type="{{showConfirmPassword ? 'text' : 'password'}}" placeholder="请输入确认密码" value="{{confirmPassword}}" bindinput="onConfirmPasswordInput" />
        <view class="eye-icon" bindtap="toggleConfirmPasswordVisibility">
          <image src="{{showConfirmPassword ? '/images/eye-open.png' : '/images/eye-close.png'}}"></image>
        </view>
      </view>
    </view>

    <!-- 确定按钮 -->
    <view class="reset-btn {{canReset ? '' : 'disabled'}}" bindtap="resetPassword">
      确定
    </view>
  </view>
</view>