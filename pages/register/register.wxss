page {
  background: #f5f5f5;
  min-height: 100vh;
}

.register-container {
  min-height: 100vh;
  padding: 40rpx 60rpx;
  position: relative;
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 40rpx;
  left: 60rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 标题 */
.title {
  margin-top: 120rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.title-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
}

/* 注册表单 */
.register-form {
  background: #fff;
  border-radius: 24rpx;
  padding: 60rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.phone-input,
.code-input,
.password-input {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 0 30rpx;
  height: 100rpx;
}

.country-code {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 2rpx solid #e9ecef;
}

.phone-field,
.code-field,
.password-field {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.phone-field::placeholder,
.code-field::placeholder,
.password-field::placeholder {
  color: #999;
}

.get-code-btn {
  font-size: 28rpx;
  color: #287BFF;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  background: rgba(40, 123, 255, 0.1);
  white-space: nowrap;
}

.get-code-btn.disabled {
  color: #999;
  background: #f0f0f0;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 100rpx;
  background: #287BFF;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #fff;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(40, 123, 255, 0.3);
}

.register-btn.disabled {
  background: #ccc;
  box-shadow: none;
}