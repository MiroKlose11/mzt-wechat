/* 页面背景 */
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Arial, sans-serif;
}

/* 顶部导航栏和背景图 */
.custom-header {
  position: relative;
  width: 100%;
  overflow: hidden;
  background: #4b99ff;
}
.nav-bg {
  width: 100%;
  height: 400rpx;
  display: block;
}
.custom-nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  height: 44px;
  z-index: 999;
  background-color: rgba(75, 153, 255, 1);
}
.nav-left {
  display: flex;
  align-items: center;
  height: 100%;
  z-index: 3;
  margin-left: 20rpx;
}
.back-btn {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  z-index: 3;
}
.nav-right {
  display: flex;
  align-items: center;
}
.more-btn {
  width: 36rpx;
  height: 36rpx;
}

/* 用户头像区域 */
.user-avatar-section {
  position: relative;
  width: 100%;
  height: 500rpx;
  margin-top: 88rpx;
  background: linear-gradient(180deg, #e8f4fd 0%, #f8fbff 100%);
  overflow: hidden;
}

.main-avatar {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid #fff;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.online-status {
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 12rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

.online-dot {
  width: 16rpx;
  height: 16rpx;
  background: #4caf50;
  border-radius: 50%;
  margin-right: 8rpx;
}

.online-text {
  color: #333;
  font-size: 24rpx;
}

.small-images {
  position: absolute;
  top: 50rpx;
  right: 50rpx;
  display: flex;
  gap: 12rpx;
}

.small-img-item {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.4);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
}

.small-avatar {
  position: absolute;
  bottom: 40rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.small-avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 用户信息区域 */
.user-info-section {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  margin-top: -30rpx;
  padding: 40rpx 30rpx;
  position: relative;
  z-index: 10;
}

.user-basic-info {
  margin-bottom: 40rpx;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}

.crown-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.level-icon {
  width: 50rpx;
  height: 25rpx;
}

.user-position-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.user-position {
  font-size: 32rpx;
  color: #666;
  margin-right: 20rpx;
}

.location-tag {
  background: #ffa726;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.user-hospital {
  color: #4b99ff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.user-intro-row {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.intro-text {
  color: #4b99ff;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.check-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 统计数据 */
.user-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.stat-number {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  flex: 1;
}

.message-btn {
  background: rgba(75, 153, 255, 0.1);
  color: #4b99ff;
  border: 2rpx solid rgba(75, 153, 255, 0.3);
}

.follow-btn {
  background: #4b99ff;
  color: #fff;
}

/* 徽章和圈子区域 */
.badges-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.badge-row {
  margin-bottom: 40rpx;
}

.badge-row:last-child {
  margin-bottom: 0;
}

.badge-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.star-icon {
  width: 0;
  height: 0;
  margin-right: 15rpx;
  position: relative;
}

.star-icon::before {
  content: '★';
  color: #4b99ff;
  font-size: 24rpx;
  position: absolute;
  top: -12rpx;
  left: 0;
}

.triangle-icon {
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 20rpx solid #4b99ff;
  margin-right: 15rpx;
}

.badge-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.badge-list {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.badge-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-circle {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid;
  background: #fff;
}

.badge-icon-text {
  font-size: 24rpx;
  font-weight: bold;
}

.badge-more {
  margin-left: 20rpx;
}

.more-text {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

/* 专业信息 */
.specialty-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 0 30rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.specialty-row {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  line-height: 1.6;
}

.specialty-row:last-child {
  margin-bottom: 0;
}

.specialty-label {
  font-size: 32rpx;
  color: #333;
  white-space: nowrap;
  margin-right: 10rpx;
  font-weight: 500;
}

.specialty-content {
  font-size: 32rpx;
  color: #666;
  flex: 1;
}

.specialty-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 分类标签 */
.category-tabs {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 25rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
}

.category-tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 15rpx;
  margin-right: 25rpx;
  position: relative;
  flex-shrink: 0;
}

.category-tab-item.active {
  color: #333;
  font-weight: bold;
}

.category-tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -25rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #333;
  border-radius: 2rpx;
}

.category-tab-text {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
}

.category-tab-item.active .category-tab-text {
  color: #333;
  font-weight: bold;
}

.search-icon {
  margin-left: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.search-img {
  width: 40rpx;
  height: 40rpx;
}

/* 内容区域 */
.content-area {
  padding: 0 30rpx 30rpx;
}

.content-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

